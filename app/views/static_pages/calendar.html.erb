
<div class="container">
  <br>
<h1>Upcoming races:</h1>
 <br>
 <table class="table table-striped table-hover table-bordered  table-dark  ">
  <thead>
  <tr>
    <th>#</th>
    <th>Race </th>
     <th>Date </th>
     <th>Location </th>
  </tr>
  </thead>

  <tbody >
  <% @upcoming_races.each do |element| %>
 
    <tr>
      <td><%= element[:raceID]%></td>
      <td><%= element[:raceName]%></td>
      <td><%= element[:raceDate]%></td>
      <td><%= element[:raceLocation]%></td>
      <td><%= location_flag(element[:raceCountry])%></td> 
     
    </tr>

  <% end %>
  </tbody>
</table>



<br>


</div>
  


<div class="container">

  <h1>Past Races:</h1>
  <br>
 <table class="table table-striped table-hover table-bordered  table-dark  ">
  <thead>
  <tr>
    <th>#</th>
    <th>Races </th>
     <th>Date </th>
     <th>Location </th>
     <th></th>
     <th>Results</th>
     <th>Race Wiki</th>
  </tr>
  </thead>

  <tbody >
  <% @finished_races.each do |element| %>
    <tr>
      <td><%= element[:raceID]%></td>
      <td><%= element[:raceName]%></td>
      <td><%= element[:raceDate]%></td>
      <td><%= element[:raceLocation]%></td>
      <td><%= location_flag(element[:raceCountry])%></td>
      <% if element[:raceURL] != nil && element[:raceStatus] == 'Finished' %>
      <td> <%= link_to "Race Results", results_path(:id =>  element[:raceID]) , :class => "btn btn-primary" %>  </td>
          <td> <%= link_to "Wiki", element[:raceURL]%>  </td>
      <% end %>     
    </tr>
  <% end %>
  </tbody>
</table>

</div>
  